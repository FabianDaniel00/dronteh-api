{% trans_default_domain 'admin' %}

<form method="post" id="undelete-form" style="display: none">
    <input type="hidden" name="token" value="{{ csrf_token('ea-undelete') }}" />
</form>

<div id="modal-undelete" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h4>{{ 'admin.modal.undelete.title'|trans }}</h4>
                <p>{{ 'admin.modal.can_undelete'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button type="button" data-bs-dismiss="modal" class="btn btn-secondary">
                    <i class="fas fa-times"></i>
                    <span class="btn-label">{{ 'action.cancel'|trans([], 'EasyAdminBundle') }}</span>
                </button>

                <button type="button" data-bs-dismiss="modal" class="btn btn-warning" id="modal-undelete-button">
                    <i class="action-icon fas fa-undo"></i>
                    <span class="btn-label">{{ 'admin.buttons.undelete'|trans }}</span>
                </button>
            </div>
        </div>
    </div>
</div>
