{% extends 'layouts/layout.html.twig' %}
{% trans_default_domain 'app' %}

{% block content %}
    <iframe
        width="100%"
        height="500px"
        src="https://www.youtube.com/embed/vdyUvu-X7Ns"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
    ></iframe>

    <section
        class="py-5 px-5 md:px-8"
        style="
            background-image: url('{{ asset('public/build/images/home.jpg') }}');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        "
    >
        <h1 class="p-3 border-4 border-green-500 text-5xl bg-green-500/20 inline-block mb-5">{{ 'app.home.header'|trans }}</h1>

        <p class="md:w-1/2 text-lg mb-5">
            {{ 'app.home.p1'|trans }}
        </p>

        <p class="md:w-1/2 text-lg mb-5">
            {{ 'app.home.p2'|trans }}
        </p>

        <a href="{{ path('app_specializations') }}" class="rounded-full border-2 border-green-500 px-3 py-1 transition-colors duration-200 hover:bg-green-800 cursor-pointer mb-10 inline-block">
            {{ 'app.home.learn_more'|trans }}
        </a>
    </section>
{% endblock content %}
