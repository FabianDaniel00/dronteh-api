{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}

{% block title %}{{ 'app.reset_password.request.title'|trans }}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>{{ 'app.reset_password.request.header'|trans }}</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                {{ 'app.reset_password.request.small'|trans }}
            </small>
        </div>

        <button class="btn btn-primary">{{ 'app.reset_password.request.send'|trans }}</button>
    {{ form_end(requestForm) }}
{% endblock %}
